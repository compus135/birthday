.bottom-wrapper{
  position: absolute;
  bottom:20px;
  left:0;
  width: calc(100vw - 60px);
  height:90px;
  z-index: 4;
  font-size:12px;
  display: flex;
  align-items: center;
  padding:0 10px;
  white-space: nowrap;
  word-break: break-all;
}
.swiper-item-content{
  color:#fff;
  /* background: rgba(0,0,0,0.3); */
  background:linear-gradient(to right,#ac00ff,#ff00d5,#ff0072,#ff0072);
  opacity: 0.5;
  border-radius: 2000px;
  padding:4px 10px;
  display: inline-block;
  max-width:  calc(100vw - 120px);
  overflow: hidden;
  text-overflow: ellipsis;
}

.comments-wrapper{
  position:absolute;
  bottom:0;
  left:0;
  background:#fff;
  border-radius: 8px 8px 0 0 ;
  z-index: 5;
  font-size:12px;
  padding-bottom: 50px;
  width:100vw;
  display: none;
}
.comments-wrapper-show{
  display: block;
  opacity: 0;
  animation: comments-animation 0.6s forwards;
}
@keyframes comments-animation{
  0%{opacity: 0;bottom:-60vh}
  100%{opacity: 1;bottom:0;}
}
.comments-header{
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  height:40px;
  line-height: 40px;
  text-align: right;
  padding-bottom:10px;
}
.comments-count{
  padding-left:20px;
}
.comments-close{
  font-size: 26px;
  width:50px;
  padding-right:20px;
}
.comments-body{
  display: block;
  overflow-x: hidden;
  overflow-y:auto;
  height:60vh;
  padding:10px 20px;
}
.comment-item{
  display: flex;
  align-items: stretch;
  position: relative;
  padding-bottom:30px;
}
.comment-photo{
  width:50px;
  height:50px;
  overflow: hidden;
  border-radius: 50%;
  margin-right:10px;
}
.comment-photo image{
  width: 100%;
  height:100%;
}
.comment-body{
  flex:1;
}
.comment-userName{
  display: block;
  font-weight: bold;
}
.comment-time{
  color:#ccc;
  position: absolute;
  right:0;
  top:0;
}
.comment-content{
  font-size:14px;
  word-break: break-all;
  margin:10px 0;
  display: block;
  letter-spacing: 0.05em
}
.comments-input-wrapper{
  position:fixed;
  left:0;
  bottom:0;
  display: flex;
  background:#fff;
  z-index: 6;
  width:100vw;
  border-top:1px solid #eee;
  align-items: center;
}
.comments-input-wrapper input{
  flex: 1;
  padding:15px 10px;
  font-size:14px;
}
.comments-input-wrapper a{
  width:50px;
  color:#fff;
  background: linear-gradient(to right,#ac00ff,#ff00d5,#ff0072,#ff0072);
  border-radius: 30px;
  padding:10px 20px;
  margin-right:10px;
}


.likes-wrapper{
  position:absolute;
  top:100px;
  left:20px;
  background:#fff;
  border-radius: 8px ;
  z-index: 5;
  font-size:12px;
  width:calc(100vw - 40px);
  height:calc(100vh - 200px);
  display: none;
  padding-bottom:10px;
}
.likes-wrapper-show{
  display: block;
  opacity: 0;
  animation: likes-animation 0.6s forwards;
}
@keyframes likes-animation{
  0%{opacity: 0;width:0;height:0;top:calc(100vh - 200px);left:calc(100vw - 40px);}
  100%{opacity: 1;width:calc(100vw - 40px);height:calc(100vh - 200px);top:100px;left:20px;}
}
.likes-header{
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  height:40px;
  line-height: 40px;
  text-align: right;
  padding-bottom:10px;
}
.likes-count{
  padding-left:20px;
}
.likes-close{
  font-size: 26px;
  width:50px;
  padding-right:20px;
}
.likes-body{
  display: flex;
  overflow-x: hidden;
  overflow-y:auto;
  height:calc(100% - 40px);
  flex-wrap: wrap;
}
.like-item{
  width:25%;
  position: relative;
  padding-bottom:30px;
  text-align: center;
}
.like-avatar{
  display: flex;
  justify-content: center;
  overflow: hidden;
}
.like-avatar image{
  width:50px;
  height:50px;
  border-radius: 50%;
}
.like-name{
  display: block;
  text-align: center;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 12px;
  max-width: 50px;
  margin:0 auto;
}
.sugar-wrapper{
  position: absolute;
  z-index: 6;
  top:20px;
  left:10px;
  width:60px;
  height:60px;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
  animation:  sugar-animation 1s infinite reverse;
}

@keyframes sugar-animation {
  0%{
    transform: rotate(0deg)
  }
  10%{
    transform: rotate(30deg)
  }
  20%{
    transform: rotate(0deg)
  }
  30%{
    transform: rotate(30deg)
  }
  40%{
    transform: rotate(0deg)
  }
  100%{
    transform: rotate(0deg)
  }
}
.sugar-wrapper image{
    width: 60px;
    height:60px;
}

.audio-wrapper{
  position: absolute;
  z-index: 4;
  bottom:10px;
  right:5px;
  width:60px;
  height:60px;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
  animation:  audio-animation 4s infinite linear;
}
.audio-cd{
  position: absolute;
  z-index: 1;
  left:0;
  top:0;
  width: 60px;
  height:60px;
}
.audio-bg{
  position: absolute;
  z-index: 2;
  left:15px;
  top:15px;
  width: 30px;
  height:30px;
  border-radius: 50%;
}


@keyframes audio-animation {
  0%{
    transform: rotate(0deg)
  }
  100%{
    transform: rotate(360deg)
  }
}