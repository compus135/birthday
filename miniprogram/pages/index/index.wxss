.fastshow-wrapper{
  position: fixed;
  width:100vw;
  height:100vh;
  background:#000;
  z-index: 9;
  /* font-size:0px; */
  white-space: nowrap;
}
.fastshow-wrapper>div{
  display: flex;
  position: absolute;
  left:0;
  top:0;
  width:100%;
  height:100%;
  align-items: center;
  justify-content: center;
  background: #000;
  color:#fff;
}
.fastshow-jump{
  position:fixed;
  top:20px;
  left:10px;
  color:blue; 
  z-index: 99;
  display: inline-block;
  background:rgba(255,255,255,0.5);
  opacity: 0.6;
  border-radius: 50%;
  height:60px;
  width:60px;
  line-height: 60px;
  text-align: center;
}
.fastshow-animation1{
  animation: fastshow1 0.0001s 2s forwards;
}
@keyframes fastshow1{
  100%{opacity: 0}
}
.fastshow-animation1text{
  /* animation: fastshow1text 2s forwards; */
  font-size: 30px;
}
@keyframes fastshow1text{
  0%{width:0px;overflow: hidden;}
  70%{width:330px;overflow: hidden;}
  100%{width:300px;}
}

.fastshow-animation2{
  animation: fastshow2 1.5s 2s forwards;
  opacity: 0
}
@keyframes fastshow2{
  0%{font-size:200px;opacity: 1;}
  50%{font-size:40px;opacity: 1;}
  99%{font-size:40px;opacity: 1;}
  100%{font-size:40px;opacity: 0;}
}

.fastshow-animation3{
  animation: fastshow3 1.5s 3.5s forwards;
  opacity: 0;
}
.fastshow-animation3 image{
  width:200px;
  height:200px;
  border-radius: 50%;
